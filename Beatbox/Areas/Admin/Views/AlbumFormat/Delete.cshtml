@model AlbumFormat

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />     @*For fetching ID for deleting.*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Album Format</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        
        <button type="submit" class="btn btn-dark bg-warning" style="width:150px">Delete</button>
        <a asp-controller="AlbumFormat" asp-action="Index" class="btn btn-dark bg-danger" style="width:150px">
            Go back
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        <script src="~/js/scripts.js"></script>
    }
}